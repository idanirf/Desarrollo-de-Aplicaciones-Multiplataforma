<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:layout_marginEnd="132dp"
            app:layout_constraintEnd_toEndOf="@+id/editUserName"/>
    <EditText
            android:layout_width="407dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="409dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPasswordLogin"
            app:layout_constraintStart_toStartOf="@+id/editUserName"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/editUserName"/>
    <Button
            android:text="Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/aceptarButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="59dp" android:layout_marginStart="46dp"
            app:layout_constraintTop_toBottomOf="@+id/editPasswordLogin"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancelarButton"
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/editPasswordLogin" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>