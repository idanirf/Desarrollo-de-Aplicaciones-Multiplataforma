<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".CreateReserbationFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:text="Añadiendo una reserva"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18px"
        android:text="Rellena todos los datos para añadir una nueva reserva:" />

    <EditText
        android:id="@+id/editTextNombreSala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18px"
        android:ems="10"
        android:hint="Nombre de la sala "
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextFechaReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18px"
        android:ems="10"
        android:hint="Fecha "
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextHoraReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18px"
        android:ems="10"
        android:hint="Hora"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGuardarReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:layout_weight="1"
            android:text="Guardar" />

        <Button
            android:id="@+id/buttonCancelarReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18px"
            android:layout_weight="1"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>