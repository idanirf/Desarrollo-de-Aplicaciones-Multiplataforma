{
  "name": "ts-node-init",
  "version": "1.0.0",
  "description": "Plantilla de proyecto para TypeScript",
  "main": "/build/main.js",
  "scripts": {
    "dev": "tsc --watch",
    "dev:watch": "nodemon",
    "watch": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/main.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "TypeScript",
    "NodeJS"
  ],
  "author": "joseluisgs",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@types/readline-sync": "^1.4.4",
    "chalk": "^4.1.2",
    "readline-sync": "^1.4.10"
  }
}
